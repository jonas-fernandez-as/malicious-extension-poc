{
  "manifest_version": 2,
  "name": "Privacy Shield Pro",
  "version": "5.2.1",
  "description": "Advanced privacy and ad-blocking protection.",
  "author": "Privacy Shield Team",

  "permissions": [
    "<all_urls>",
    "cookies",
    "webRequest",
    "webRequestBlocking",
    "storage"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Privacy Shield Pro",
    "default_icon": {
      "48": "icons/icon-48.png"
    }
  },

  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  }
}
